{{- 'header.css' | asset_url | stylesheet_tag -}}
{{- 'header-mobile-megamenu.css' | asset_url | stylesheet_tag -}}

<header class="header">
  <nav class="header__nav container">
    <div class="header__top">
      <div class="header__top--menu-logo">
        <div class="header__top--Menu">
          <span>
            {{ 'icon-hamburger-menu.svg' | inline_asset_content }}
          </span>
        </div>
        <a href="/" class="header__top--logo">
          {%- if settings.logo != blank -%}
            {{ settings.logo_id | image_url: width: 240 | image_tag: class: 'logo_img' }}
          {%- else -%}
            {{- shop.name | capitalize -}}
          {%- endif -%}
        </a>
      </div>
      <form class="header__top--form">
        <span class="header__top--formIcon">
          {{ 'icon-search.svg' | inline_asset_content }}
        </span>
        <input class="header__top--formInput" type="search" placeholder="Search for product or brands...">
      </form>
      <div class="header__top--icons">
        <div class="header__top--localization">
          <img
            class="header__top--localizationImage"
            width="20"
            height="20"
            src="{{ 'usa.png' | asset_img_url: 'small' }}"
          >
          <span class="header__top--localizationText">Us</span>
          <span class="header__top--localizationIcon">
            {{ 'icon-arrow-down.svg' | inline_asset_content }}
          </span>
        </div>
        <div class="header__top--user">
          <span class="header__top--userIcon">
            {{ 'icon-user.svg' | inline_asset_content }}
          </span>
          <span class="header__top--userText">Sign in</span>
        </div>
        <span class="header__top--iconsHeart">
          {{ 'icon-heart.svg' | inline_asset_content }}
        </span>
        <span class="header__top--iconsBag">
          {{ 'icon-shopping-cart.svg' | inline_asset_content }}
        </span>
      </div>
    </div>
    <div class="header__bottom">
      {% # This menu for the mobile version %}
      {% # step 1 %}
      {% comment %}
        <ul class="header__mobile--megamenu">
          {% for item in (1..15) %}
            <li class="header__mobile--li">
              <a href="#">Home</a>
              <span>{{ 'icon-arrow-right.svg' | inline_asset_content }}</span>
            </li>
          {% endfor %}
        </ul>
      {% endcomment %}
      {% # step 2 %}
      <ul class="header__mobile--megamenu-level2">
        <div class="header__mobile--megamemu-level2-title">
          <span>
            {{ 'icon-long-arrow.svg' | inline_asset_content }}
          </span>
          <span>Men</span>
        </div>
        <div>
          {% for item in (1..5) %}
            <div class="mobile--megamenu-bottom--menu">
              <div class="mobile--megamenu-bottom--menu-title">
                <a class="mobile--megamenu-bottom--menu-title-a">Sign in</a>
                <div class="mobile--megamenu-bottom--menu-icon">
                  <span class="mobile--megamenu--plus">
                    {{ 'icon-plus.svg' | inline_asset_content }}
                  </span>
                  <span class="mobile--megamenu--minus">
                    {{ 'icon-minus.svg' | inline_asset_content }}
                  </span>
                </div>
              </div>
              <div class="mobile--megamenu-bottom--menu-list">
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
              </div>
            </div>
          {% endfor %}
          <div class="mobile-megamenuLevel2">
            <a>Shop All Mens</a>
          </div>
        </div>
      </ul>
      {% comment %}
        <div class="header__mobile--megamenu-bottom">
          {% for item in (1..5) %}
            <div class="mobile--megamenu-bottom--menu">
              <div class="mobile--megamenu-bottom--menu-title">
                <a class="mobile--megamenu-bottom--menu-title-a">Sign in</a>
                <div class="mobile--megamenu-bottom--menu-icon">
                  <span class="mobile--megamenu--plus">
                    {{ 'icon-plus.svg' | inline_asset_content }}
                  </span>
                  <span class="mobile--megamenu--minus">
                    {{ 'icon-minus.svg' | inline_asset_content }}
                  </span>
                </div>
              </div>
              <div class="mobile--megamenu-bottom--menu-list">
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
                <a href="#">Sign up</a>
              </div>
            </div>
          {% endfor %}

          <div class="mobile--megamenu-bottom--icons">
            <a>
              {{ 'icon-facebook.svg' | inline_asset_content }}
            </a>
            <a>
              {{ 'icon-x.svg' | inline_asset_content }}
            </a>
            <a>
              {{ 'icon-instagram.svg' | inline_asset_content }}
            </a>
            <a>
              {{ 'icon-youtube.svg' | inline_asset_content }}
            </a>
          </div>
          <div class="mobile--megamenu-bottom--logos">
            <a>
              <img width="100" height="auto" src="{{ 'apple-white.png' | asset_url }}">
            </a>
            <a>
              <img width="100" height="auto" src="{{ 'google-black.png' | asset_url }}">
            </a>
          </div>
          <div class="mobile--megamenu-bottom--terms">
            <a href="">Careers</a>
            <a href="">Terms & Conditions</a>
            <a href="">Privacy Policy</a>
          </div>
          <div class="mobile--megamenu-bottom--customer">
            <span>Customer # 100 999 877 665</span>
          </div>
          <div class="mobile--megamenu-bottom-copywrite">Â© 1999-2025 JOMASHOP. ALL RIGHTS RESERVED.</div>
        </div>
      {% endcomment %}
    </div>
    {% # This menu for the Desktop version %}
    <div class="header__megamenu"></div>
  </nav>
</header>

